{% block title %}Articles{% endblock %}

{% block body %}
    <p>Voici nos articles</p>

    <a href="{{ path('article_new') }}" class="btn btn-primary">Nouvel article</a>

    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_show', {id: article.id}) }}">{{ article.title }}</a>
            </li>
        {% else %}
            <li>Aucun article trouv√©.</li>
        {% endfor %}
    </ul>
{% endblock %}
